{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "module": "CommonJS",
        "moduleResolution": "node",
        "target": "ES2020",
        "outDir": ".vercel/output/functions",
        "rootDir": ".",
        "allowImportingTsExtensions": false
    },
    "include": [
        "server/**/*",
        "shared/**/*"
    ],
    "exclude": [
        "client/**/*",
        "node_modules",
        "dist"
    ]
}